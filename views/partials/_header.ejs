<header id=main-header>
  <nav class="navbar navbar-expand-md navbar-dark bg-primary">
    <a class="navbar-brand" href="/">QuizApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <% if(name) { %>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="/api/quizzes/new/quizform" >Create New Quiz</a>
          <a class="nav-item nav-link" href="/api/quizzes">My Quizzes</a>
          <a class="nav-item nav-link" href="/api/attempts">My Attempts</a>
        </div>
      </div>
      <h5 class ="nomargin white">Logged in as :&nbsp</h5>  <!-- &nbsp(non-breaking space) for adding space after header -->
      <h5 class ="nomargin white"><%= name %>&nbsp&nbsp</h5>
      <form method="POST", action="/logout">
        <button class="btn btn-warning" type="submit">Logout</button>
      </form>

    <% } else { %>
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/api/login"><b>Login</b></a>
        <a class="nav-item nav-link" href="/api/users/register"><b>Register</b></a>
      </div>
    <% } %>
  </nav>
</header>
