<body>
  <%- include('partials/_header.ejs') %>
  <header>
    <a href="/">
      <h1>QuizApp</h1>
      </a>
  </header>
  <main>
    <% for (const quiz of myQuizzes) { -%>
      <div class="quiz-preview">
        <h6>Dummy text for amount of attempts</h6>
        <h2><%= quiz.title %></h2>
        <a class="btn btn-primary" href="quizzes/<%= quiz.link %>" role="button">Take the quiz</a>
      </div>
    <% } -%>
  </main>
</body>

</html>
